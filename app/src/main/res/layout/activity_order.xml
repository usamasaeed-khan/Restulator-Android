<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/waiterName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:paddingLeft="20dp"
            android:text="Select Waiter"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/waiterSpinner"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/waiterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/cookName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:paddingLeft="20dp"
            android:layout_below="@id/waiterName"
            android:text="Select Cook"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/cookSpinner"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/cookName"
            android:layout_width="wrap_content"
            android:layout_below="@id/waiterSpinner"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/customerName"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:paddingLeft="20dp"
            android:layout_below="@id/cookName"
            android:text="Select Customer"
            android:inputType="textPersonName"
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/customerSpinner"
            android:layout_marginTop="55dp"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@id/cookName"
            android:layout_width="wrap_content"
            android:layout_below="@id/cookSpinner"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:paddingLeft="20dp"
            android:layout_below="@id/customerName"
            android:text="Select Order Status"
            android:inputType="textPersonName"
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/orderStatusSpinner"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_below="@id/customerSpinner"
            android:layout_height="wrap_content"
            android:entries="@array/spinnerItems"
            />



        <TextView
            android:id="@+id/orderTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:paddingLeft="20dp"
            android:layout_below="@id/orderStatus"
            android:text="Enter Order Time"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:layout_toRightOf="@id/orderTextView"
            android:layout_below="@id/orderStatusSpinner"
            android:hint="Order Time"
            android:inputType="textPersonName"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/orderCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:paddingLeft="20dp"
            android:layout_below="@id/orderTextView"
            android:text="Enter Order Complete Time"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/completeTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:layout_below="@id/orderTime"
            android:layout_toRightOf="@id/orderCompleteTextView"
            android:hint="Complete Time"
            android:textSize="20sp" />


        <Button
            android:id="@+id/addOrderDetails"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/orderCompleteTextView"
            android:layout_marginTop="80dp"
            android:background="#add8e6"
            android:text="Save Order Details"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            />

    </RelativeLayout>
</LinearLayout>