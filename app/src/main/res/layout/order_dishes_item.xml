<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="100dp"
    >

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:id="@+id/DishName_block">


        <TextView
            android:id="@+id/DishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:singleLine="false"
            android:textSize="14sp"
            android:textStyle="bold" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:id="@+id/Quantity_block"
        android:layout_toRightOf="@+id/DishName_block"
        >

        <TextView
            android:id="@+id/DishQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="sans-serif"
            android:text="QTY"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/DishQuantityData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/Quantity_block"
        android:id="@+id/Price_block"
        >

        <TextView
            android:id="@+id/DishPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:text="PRICE"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/DishPriceData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textStyle="bold" />



    </LinearLayout>
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingRight="30dp"
        android:id="@+id/editDishButton"
        android:layout_toLeftOf="@+id/dish_delete"
        android:background="@drawable/ic_edit_icon"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingLeft="30dp"
        android:id="@+id/dish_delete"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_delete_red_icon"
        />


</RelativeLayout>

